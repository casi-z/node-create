{
	"compilerOptions": {
		"target": "ES2021",
		"module": "commonjs",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"noImplicitAny": true,
		"allowJs": true,
		"outDir": "dist",
		"rootDir": "src",
		"sourceMap": true,
		"moduleDetection": "force",
		"resolveJsonModule": true,
		"esModuleInterop": true
	}
}